rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    allow read, write: if false;
    match /products/{productId} {
      function isDocOwner(request, resource) {
        return request.auth.uid == resource.data.creator;
      }

      function documentCreatorIsRequester(request) {
        return request.resource.data.creator == request.auth.uid;
      }

      allow read, update, delete: if isDocOwner(request, resource)
      allow create: if documentCreatorIsRequester(request)
    }

    match /current-meals/{currentMealId}  {   
      function isCurrentMealOwner(request, currentMealId) {
        return request.auth != null && request.auth.uid == currentMealId;
      }

      allow read, write: if isCurrentMealOwner(request, currentMealId);
    }

    match /settings/{insulinToCarbRatiosId}  {
      function isInsulinToCarbRatiosOwner(request, insulinToCarbRatiosId) {
        return request.auth != null && request.auth.uid == insulinToCarbRatiosId;
      }

      allow read, write: if isInsulinToCarbRatiosOwner(request, insulinToCarbRatiosId);
    } 
  }
}